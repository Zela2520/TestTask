{
    "compilerOptions": {
      "jsx": "react",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@components/*":  ["src/components/*"],
        "@views/*":  ["src/views/*"],
        "@actions/*":  ["src/actions/*"],
        "@assets/*":  ["src/assets/*"],
        "@styles/*":  ["src/styles/*"],
        "@uikits/*":  ["src/uikit/*"],
      },
      "moduleResolution": "node",
      "strict": true,
      "module": "ES6",
      "noImplicitAny": true,
      "sourceMap": true,
      "target": "es2017",
      "allowJs": true,
      "noEmit": false,
      "skipLibCheck": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
}
